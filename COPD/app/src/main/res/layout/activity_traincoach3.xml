    <!--        app:layout_constraintStart_toStartOf="parent"-->
    <!--        app:layout_constraintTop_toBottomOf="@+id/remainingtime"-->
    <!--        app:layout_constraintVertical_bias="0.256" />-->

    <Button
        android:id="@+id/butimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/imageButton4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/remainingtime"
        app:layout_constraintVertical_bias="0.6" />

    <Button
        android:id="@+id/tcsetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="tcsetting"
        android:text="設定"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.916"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.243" />

    <TextView
        android:id="@+id/timerange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="階段一"
        android:textSize="35dp"
        app:layout_constraintBottom_toTopOf="@+id/remainingtime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAlphacode"
        app:layout_constraintVertical_bias="0.872" />
</androidx.constraintlayout.widget.ConstraintLayout>